<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.cernol.works.web.lable.LableBrowse"
        focusComponent="lablesTable"
        lookupComponent="lablesTable"
        messagesPack="com.cernol.works.web.lable">
    <dsContext>
        <groupDatasource id="lablesDs"
                         class="com.cernol.works.entity.Lable"
                         view="_local">
            <query>
                <![CDATA[select e from works$Lable e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="lablesTable"
            spacing="true">
        <filter id="filter"
                applyTo="lablesTable"
                datasource="lablesDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="lablesTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="code"/>
                <column id="description"/>
                <column id="reorder"/>
                <column id="maxStock"/>
                <column id="unit"/>
                <column id="currentStatus"/>
                <column id="unitCost"/>
            </columns>
            <rows datasource="lablesDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="lablesTable.create"/>
                <button id="editBtn"
                        action="lablesTable.edit"/>
                <button id="removeBtn"
                        action="lablesTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
