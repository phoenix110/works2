<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="com.cernol.works.web.systemkey.SystemKeyBrowse"
        focusComponent="systemKeysTable"
        lookupComponent="systemKeysTable"
        messagesPack="com.cernol.works.web.systemkey">
    <dsContext>
        <datasource id="systemKeyDs"
                    class="com.cernol.works.entity.SystemKey"
                    view="_local"/>
        <groupDatasource id="systemKeysDs"
                         class="com.cernol.works.entity.SystemKey"
                         view="_local">
            <query>
                <![CDATA[select e from works$SystemKey e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <actions>
        <action id="save"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                invoke="save"
                shortcut="CTRL-ENTER"/>
        <action id="cancel"
                caption="mainMsg://actions.Cancel"
                icon="icons/cancel.png"
                invoke="cancel"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split id="split"
               height="100%"
               orientation="horizontal"
               reversePosition="true"
               width="100%">
            <vbox id="lookupBox"
                  expand="systemKeysTable"
                  height="100%"
                  margin="false,true,false,false"
                  spacing="true">
                <filter id="filter"
                        applyTo="systemKeysTable"
                        datasource="systemKeysDs">
                    <properties include=".*"/>
                </filter>
                <groupTable id="systemKeysTable"
                            width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="context"/>
                        <column id="key"/>
                        <column id="value"/>
                    </columns>
                    <rows datasource="systemKeysDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="systemKeysTable.create"/>
                        <button id="editBtn"
                                action="systemKeysTable.edit"/>
                        <button id="removeBtn"
                                action="systemKeysTable.remove"/>
                    </buttonsPanel>
                </groupTable>
            </vbox>
            <vbox id="editBox"
                  expand="fieldGroupBox"
                  height="100%"
                  margin="false,false,false,true"
                  spacing="true">
                <vbox id="fieldGroupBox">
                    <fieldGroup id="fieldGroup"
                                datasource="systemKeyDs">
                        <column width="250px">
                            <field property="context"/>
                            <field property="key"/>
                            <field property="value"/>
                        </column>
                    </fieldGroup>
                </vbox>
                <hbox id="actionsPane"
                      spacing="true"
                      visible="false">
                    <button id="saveBtn"
                            action="save"/>
                    <button id="cancelBtn"
                            action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
